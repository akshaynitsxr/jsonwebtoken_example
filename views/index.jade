extends layout

block head_scripts
  link(href="/stylesheets/helloworld.css",rel="stylesheet")
  script(src='/javascripts/helloworld.js',type="text/javascript")

block content
  center
    .login
      h1.loginheading Login
      form(action="/",method='POST')
        .form-group.nameInput.has-feedback
          label(for='name') Username
          input#name.form-control(type='text', name='name', placeholder='admin', required)
        .form-group.passwordInput.has-feedback
          label(for='password') Password
          input#password.form-control(type='password', name='password', placeholder="password", required)
        button.btn.btn-default(type='submit') Submit